<div class='post alert alert-info span8' id='<%= dom_id(post) %>' data-from-group='<%= post.from_group? %>'>
  <div class='span6 pull-left'>
    <%- if post.repost? %>
      <%= repost_content(post) %>

      <div class='post-options'>
        <%= link_to icon_label('icon-trash'), post_path(post), remote: true, method: 'delete', class: 'destroy post-option', data: { confirm: t('common.are_you_sure?') } %>
        <%= link_to icon_label('icon-time'), nil, class: 'add-timer post-option' %>
      </div>
    <% else %>
      <div class='content'>
        <div class='body'><%= simple_format post.body %></div>

        <div class='post-options'>
          <%= link_to icon_label('icon-pencil'), nil, class: 'edit post-option' %>
          <%= link_to icon_label('icon-trash'), post_path(post), remote: true, method: 'delete', class: 'destroy post-option', data: { confirm: t('common.are_you_sure?') } %>
          <%= link_to icon_label('icon-time'), nil, class: 'add-timer post-option' %>
        </div>

        <div class='post-photos'>
          <% post.photos.each do |photo| %>
            <div class='post-photo' id='post-photo-<%= photo.id %>'><%= image_tag photo.urls['src_small'] %></div>
          <% end %>
        </div>
      </div>

      <div class='form-placeholder'>
      </div>
    <% end %>
  </div>

  <div class='available-for-exchanges-column span1 pull-left'>
    <%- if post.available_for_exchanges? %>
      <%= link_to icon_label('icon-star'), post_path(post, available_for_exchanges: false), method: 'put', remote: true, class: 'unavailable-for-exchange' %>
    <% else %>
      <%= link_to icon_label('icon-star-empty'), post_path(post, available_for_exchanges: true), method: 'put', remote: true, class: 'available-for-exchange' %>
    <% end %>
  </div>
</div>

