<% content_for :page_header do %>
  <%= page_header %>
<% end %>

<%= link_to t('.update'), groups_path, method: 'put', remote: true, class: 'btn btn-success', id: 'update-groups' %>

<hr />

<div id='groups'>
  <%- if @groups.any? %>
    <%= render @groups %>
    <hr />
  <% else %>
    <h3><%= t '.no_groups' %></h3>
  <% end %>
</div>


<div class='modal container hide fade' id='group-modal' tabindex='-1'>
  <div class='modal-header'>
    <button type='button' class='close' id='close-group-modal'><%= t 'common.x' %></button>
    <h3> <%= t '.info' %> </h3>
  </div>

  <div class='modal-body' id='group'>
  </div>

  <div class='modal-footer'>
    <%= link_to t('common.close'), nil, id: 'close-group-modal', class: 'btn' %>
  </div>
</div>

