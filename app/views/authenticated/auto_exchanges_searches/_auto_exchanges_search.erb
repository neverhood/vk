<div class='search-result row'>
  <div class='span6'>
    <div class='post alert alert-info'>
        <div class='body'><%= simple_format(post.body) %></div>

        <div class='post-photos'>
          <% post.photos.each do |photo| %>
            <div class='post-photo' id='post-photo-<%= photo.id %>'><%= image_tag photo.urls['src_small'] %></div>
          <% end %>
        </div>
    </div>
  </div>

  <div class='span6 group-info'>
    <strong> <%= post.group.name %> </strong>

    <div><span> <%= t '.info.subscribers' %> </span>: <strong class='label label-info'> <%= post.group.subscribers_count %> </strong></div>
    <div><span> <%= t '.info.views' %> </span>: <strong class='label label-info'> <%= post.group.views_count %> </strong></div>
    <div><span> <%= t '.info.visitors' %> </span>: <strong class='label label-info'> <%= post.group.visitors_count %> </strong></div>
    <div><span> <%= t '.info.reach' %> </span>: <strong class='label label-info'> <%= post.group.reach %> </strong></div>
    <div><span> <%= t '.info.reach_subscribers' %> </span>: <strong class='label label-info'> <%= post.group.reach_subscribers %> </strong></div>
  </div>
</div>

<hr>
